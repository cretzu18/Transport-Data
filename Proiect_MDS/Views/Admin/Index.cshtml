@{
}
@model IEnumerable<Proiect_MDS.Models.Utilizator>

<h2>Users</h2>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Actions</th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Nume</td>
            <td>@user.Email</td>
            <td>@user.Rol</td>
            <td>
                <a href="@Url.Action("Edit", "Admin", new { id = user.Id })" class="btn btn-primary">Edit</a>
                <a href="@Url.Action("Delete", "Admin", new { id = user.Id })" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back</a>
</table>
