@{
}
@model IEnumerable<Proiect_MDS.Models.Station>

<h2>Stations</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Congestion Level</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var station in Model)
        {
            <tr>
                <td>@station.Name</td>
                <td>@station.Latitude</td>
                <td>@station.Longitude</td>
                <td>@station.CongestionLevel</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@station.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@station.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back</a>

<a asp-action="Create" class="btn btn-success">Add New Station</a>
